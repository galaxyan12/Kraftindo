<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/profile_background"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:background="@drawable/background" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerHorizontal="true"
            android:id="@+id/circle_profile"
            android:layout_marginTop="100dp"
            android:src="@drawable/nice"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <androidx.cardview.widget.CardView
            card_view:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_below="@+id/circle_profile"
            android:layout_marginTop="8dp"
            card_view:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/profile_nama"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama" />

                <TextView
                    android:id="@+id/profile_nama_value"
                    android:layout_marginLeft="24dp"
                    android:layout_below="@id/profile_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:text="Kuay Rai Kub" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_below="@id/profile_nama_value"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:text="E-Mail"
                    android:id="@+id/profile_email" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:text="kuayraikub@rocketmail.com"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@id/profile_email"
                    android:id="@+id/profile_email_value" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:layout_below="@id/profile_email_value"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="24dp"
                    android:id="@+id/profile_phonumb" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+84175947781"
                    android:textSize="18sp"
                    android:layout_marginLeft="24dp"
                    android:layout_below="@id/profile_phonumb"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/profile_phonumb_value" />

                <TextView
                    android:id="@+id/profile_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp"
                    android:layout_below="@id/profile_phonumb_value"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp" />

                <ImageView
                    android:id="@+id/profile_location"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/profile_address"
                    android:src="@drawable/ic_location_on_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguyen Thai Hoc Street, Chao Onh Lang Ward,\nDistrict 1, Vietnam"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="14sp"
                    android:layout_below="@id/profile_address"
                    android:layout_toRightOf="@id/profile_location"
                    android:layout_toEndOf="@id/profile_location" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_logout"
                    android:layout_marginTop="64dp"
                    android:layout_marginRight="24dp"
                    android:layout_below="@id/profile_location"
                    android:layout_alignParentRight="true"
                    card_view:cardCornerRadius="20dp"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    card_view:cardBackgroundColor="@color/colorPrimaryDark">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:text="Logout" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>