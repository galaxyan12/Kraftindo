<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile_background"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:background="@drawable/background"
            android:orientation="horizontal" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/nice" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:layout_below="@+id/circle_profile"
            android:layout_marginTop="8dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/profile_nama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:text="Nama"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/profile_nama_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_nama"
                    android:layout_marginLeft="24dp"
                    android:text="Kuay Rai Kub"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_nama_value"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:text="E-Mail"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/profile_email_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_email"
                    android:layout_marginLeft="24dp"
                    android:text="kuayraikub@rocketmail.com"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/profile_phonumb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_email_value"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Phone Number"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/profile_phonumb_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_phonumb"
                    android:layout_marginLeft="24dp"
                    android:text="+84175947781"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/profile_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_phonumb_value"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="16dp"
                    android:text="Address"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/profile_location"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/profile_address"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="4dp"
                    android:src="@drawable/ic_location_on_black_24dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_address"
                    android:id="@+id/profile_address_value"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@id/profile_location"
                    android:layout_toRightOf="@id/profile_location"
                    android:text="Nguyen Thai Hoc Street, Chao Onh Lang Ward,\nDistrict 1, Vietnam"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_logout"
                    android:layout_width="120dp"
                    android:clickable="true"
                    android:layout_height="40dp"
                    android:layout_below="@id/profile_location"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="64dp"
                    android:layout_marginRight="24dp"
                    card_view:cardBackgroundColor="@color/colorPrimaryDark"
                    card_view:cardCornerRadius="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Logout"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:clickable="true"
                    android:id="@+id/profile_edit"
                    android:layout_below="@id/profile_location"
                    android:layout_marginTop="64dp"
                    android:layout_marginLeft="24dp"
                    card_view:cardCornerRadius="20dp"
                    card_view:cardBackgroundColor="@color/colorPrimaryDark"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="Edit"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</ScrollView>